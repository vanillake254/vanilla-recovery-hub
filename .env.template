# Backend Environment Variables Template
# Copy this file to backend/.env and fill in your actual values

# MongoDB Atlas Connection
MONGO_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/vanilla-recovery-hub?retryWrites=true&w=majority

# Flutterwave Payment Gateway
FLW_PUBLIC_KEY=FLWPUBK_TEST-xxxxxxxxxxxxxxxxxxxxx
FLW_SECRET_KEY=FLWSECK_TEST-xxxxxxxxxxxxxxxxxxxxx
FLW_ENCRYPTION_KEY=FLWSECK_TESTxxxxxxxxxxxxxxxxxxxxx

# Payment Redirect URLs
SUCCESS_URL=https://your-firebase-app.web.app/payment-success
FAIL_URL=https://your-firebase-app.web.app/payment-failed

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-change-this

# Email Service (Resend API)
EMAIL_API_KEY=re_xxxxxxxxxxxxxxxxxxxxx
ADMIN_EMAIL=admin@vanillarecoveryhub.com

# Frontend URL (for CORS)
FRONTEND_URL=https://your-firebase-app.web.app

# Server Configuration
PORT=5000
NODE_ENV=production

# Sentry (optional for error tracking)
SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# Frontend Environment Variables Template
# Copy to frontend/.env.local

# Backend API
NEXT_PUBLIC_API_URL=https://your-railway-backend.railway.app

# Firebase Configuration (get from Firebase Console)
NEXT_PUBLIC_FIREBASE_API_KEY=xxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=xxxxxxxxxxxxx
NEXT_PUBLIC_FIREBASE_APP_ID=1:xxxxxxxxxxxxx:web:xxxxxxxxxxxxx
